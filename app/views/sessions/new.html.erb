<h3>Sign in!</h3>

<% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li class="error"> <%= error %> </li>
      <% end %>
    </ul>
  <% end %>

<%= form_for :session, url: "/login" do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  

  <%= f.submit "Login" %>
<% end %>