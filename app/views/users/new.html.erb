<p>Sign up for a new account!</p>

<%if flash[:errors] %>
    <%flash[:errors].each do |err_mess|%>
        <li><%=err_mess%></li>
    <%end%> 
<%end%>

<%= form_for @user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%=f.submit%>

  <% end %>

